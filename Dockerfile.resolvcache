FROM golang:1.14-alpine as build-env

# Arguments for build
ARG arch=amd64
# Set github user and token for private repositories
ARG github_user
ENV github_user=$github_user
ARG github_token
ENV github_token=$github_token

# Install git and certificates
RUN apk update && apk add --no-cache git make ca-certificates && update-ca-certificates

# create user for service
RUN adduser -D -g 'luids' ludns \
    && mkdir -p /var/lib/luids/dns \
    && touch /var/lib/luids/dns/.keep \
    && chown -R ludns /var/lib/luids/dns

WORKDIR /app

## config git
RUN if [ ! -z "$github_user" ]; then git config --global \
    url."https://${github_user}:${github_token}@github.com/".insteadOf \
    "https://github.com/"; fi

## dependences
COPY go.mod .
COPY go.sum .
RUN go mod download

## build
COPY . .
RUN make binaries SYSTEM="GOOS=linux GOARCH=${arch}"

## create docker
FROM scratch

LABEL maintainer="Luis Guill√©n Civera <luisguillenc@gmail.com>"

# Import the user and group files from the builder.
COPY --from=build-env /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/
COPY --from=build-env /etc/passwd /etc/passwd

COPY --from=build-env /app/bin/resolvcache /bin/
COPY --from=build-env /app/configs/docker/resolvcache/* /etc/luids/dns/
COPY --from=build-env /var/lib/luids /var/lib/luids

USER ludns

EXPOSE 5891
VOLUME [ "/etc/luids", "/var/lib/luids/dns" ]
CMD [ "/bin/resolvcache", "--config", "/etc/luids/dns/resolvcache.toml" ]
